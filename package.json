{
  "name": "biblioteca-app",
  "version": "1.0.0-beta3",
  "description": "Sistema de gestión de biblioteca personal",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "bun test",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,css,html}",
    "postinstall": "electron-rebuild"
  },
  "keywords": ["library", "books", "management", "electron"],
  "author": {
    "name": "Juan David Rodríguez García",
    "email": "juanda@juandarodriguez.es"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "fuse.js": "^7.0.0",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^3.8.3",
    "lucide": "^0.460.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "build": {
    "appId": "com.juanda.biblioteca",
    "productName": "Mi Biblioteca",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icons/icon.png",
      "category": "Utility",
      "maintainer": "Juan David Rodríguez García <juanda@juandarodriguez.es>"
    },
    "asarUnpack": [
      "node_modules/better-sqlite3/**"
    ]
  }
}
